rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Products folder - allow authenticated users to upload
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
